doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/main.css')
    link(rel='stylesheet', href='/stylesheets/test.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    block css
  body(ng-app="adminPanelApp")
    div(class="container-fluid" ng-controller="mainCtrl")
        div.row
            div.col-12
                block header
        div.row
            div.col-md-3.hidden-xs.hidden-sm
                div(style="background: red;") menu
                block menu
            div.col-md-9.col-sm-12
                div(style="background: green;") content
                block content
        div.row
            div.col-12
                block footer
        div.row
            div.col-md-4
                div(style="background: red;") menu
            div.col-md-4.col-xs-9
                div(style="background: yellow;") content
            div.col-md-4.col-xs-3
                div(style="background: green;") right
        div.row
            div.col-md-4.col-md-offset-1
                div(style="background: red;") menu
            div.col-md-4.col-md-offset-2
                div(style="background: green;") offset right
        div.row
            div.col-md-4
                div(style="background: red;") left
            div.col-md-4.col-xs-9
                div(style="background: yellow;") center
            div.col-md-4.col-xs-3
                div(style="background: green;") right
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular-animate.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular-route.js")
    script(src="/javascripts/test.js")
    script(src="/app/admin-panel-app.js")
    script(src="/app/main-ctrl.js")
    script(src="/app/users/users-module.js")
    script(src="/app/users/users-list-ctrl.js")
    block scripts
  
  